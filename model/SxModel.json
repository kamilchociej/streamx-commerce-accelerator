{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/SxProduct",
  "definitions": {
    "SxProduct": {
      "type": "object",
      "title": "SxProduct",
      "required": [
        "id",
        "sku",
        "slug",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "lang": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "primaryImage": {
          "$ref": "#/definitions/SxImage"
        },
        "gallery": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxImage"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxCategory"
          }
        },
        "attributes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxAttribute"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxProductVariant"
          }
        }
      }
    },
    "SxImage": {
      "type": "object",
      "title": "SxImage",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "alt": {
          "type": "string"
        }
      }
    },
    "SxCategory": {
      "type": "object",
      "title": "SxCategory",
      "required": [
        "id",
        "slug",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "parent": {
          "$ref": "#/definitions/SxCategory"
        },
        "subcategories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxCategory"
          }
        }
      }
    },
    "SxAttribute": {
      "type": "object",
      "title": "SxAttribute",
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "valueLabel": {
          "type": "string"
        },
        "isFacet": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "SxProductVariant": {
      "type": "object",
      "title": "SxProductVariant",
      "required": [
        "id",
        "slug",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SxAttribute"
          }
        }
      }
    }
  }
}
